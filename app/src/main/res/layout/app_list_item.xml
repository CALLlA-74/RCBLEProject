<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="16dp"
    android:minHeight="60dp">

    <ImageView
        android:id="@+id/iv_connected_hub_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/gecko_hub"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="60dp"
        app:layout_constraintStart_toEndOf="@id/iv_connected_hub_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        style="@style/ItemTextStyle"/>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt_ok"
        style="@style/ItemTextStyle"
        android:visibility="gone"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"/>

    <ImageView
        android:id="@+id/bt_delete"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/item_button_with_circle_blue_background"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_delete_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/bt_cancel"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginEnd="16dp"
        android:background="@drawable/item_button_with_circle_blue_background"
        android:src="@drawable/baseline_close_18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/bt_ok"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginEnd="5dp"
        android:background="@drawable/item_button_with_circle_blue_background"
        android:src="@drawable/baseline_check_18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt_cancel"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/bt_alarm_light"
        android:visibility="gone"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginEnd="16dp"
        android:background="@drawable/item_button_with_circle_blue_background"
        android:src="@drawable/alarm_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt_delete"/>
</androidx.constraintlayout.widget.ConstraintLayout>
