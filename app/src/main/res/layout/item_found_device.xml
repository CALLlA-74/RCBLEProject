<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="60dp">

    <ImageView
        android:id="@+id/iv_hub_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:src="@drawable/gecko_hub"/>
    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="60dp"
        app:layout_constraintStart_toEndOf="@id/iv_hub_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/ItemTextStyle"/>

    <ImageButton
        android:id="@+id/bt_add_device"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/item_button_with_circle_blue_background"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:src="@drawable/baseline_add_white_36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>
