<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".ViewAndPresenter.MainMenu.ProfilesActivity"
    tools:showIn="@layout/content_profiles">

    <include
        layout="@layout/content_profiles" />

    <ImageButton
        android:id="@+id/bt_add_profile"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle_button_profile_control"
        android:src="@drawable/gamepad_512"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>