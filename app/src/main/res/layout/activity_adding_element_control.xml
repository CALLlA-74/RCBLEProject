<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_content_add_element"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.RCBLEProject.FullscreenContainer"
    tools:context=".AddingElementControlActivity">

    <include
        android:id="@+id/tb_activity_add_element"
        layout="@layout/app_toolbar"/>

    <ListView
        android:id="@+id/lv_elements_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_element_control"/>
</LinearLayout>