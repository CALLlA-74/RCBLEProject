<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SeekBar
        android:id="@+id/sb_element_size_changer"
        style="@style/Base.Widget.AppCompat.SeekBar"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:thumbOffset="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center_vertical"
        android:thumb="@drawable/thumb_for_element_size_changer_1"
        android:progressDrawable="@drawable/progress_for_element_size_changer_1"
        android:indeterminateDrawable="@drawable/progress_for_element_size_changer_1"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:splitTrack="false"
        android:max="20"
        android:progress="0"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"/>

    <TextView
        android:id="@+id/tv_val_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/sb_element_size_changer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:background="@null"
        android:textColor="@color/white"
        android:text="20"/>
</androidx.constraintlayout.widget.ConstraintLayout>