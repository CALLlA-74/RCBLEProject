<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RCBLEProject" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/honolulu_blue</item>
        <item name="colorPrimaryVariant">@null</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--item name="colorSecondary">@color/teal_200</item-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.RCBLEProject.AddingHubsActivity" parent="Theme.RCBLEProject">
        <item name="android:background">@null</item>
    </style>

    <style name="ToolbarStyle">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MenuItemStyle">
        <!--item name="android:textStyle">normal</item-->
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <!--item name="android:height">?attr/actionBarSize</item-->
        <!--item name="android:gravity">center_vertical</item-->
    </style>

    <style name="Theme.RCBLEProject.Fullscreen" parent="Theme.RCBLEProject">
        <item name="android:actionBarStyle">@style/Widget.Theme.RCBLEProject.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.RCBLEProject.ProfileControlActivity" parent="Theme.RCBLEProject.Fullscreen">
        <item name="android:background">@null</item>
    </style>

    <style name="ThemeOverlay.RCBLEProject.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
</resources>